rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Reglas para la carpeta de anuncios
    match /anuncios/{userId}/{fileName} {
      // Permitir lectura pública de todas las imágenes de anuncios
      allow read: if true;

      // Solo usuarios con rol "exclusivo" pueden subir imágenes de anuncios
      // y solo a su propia carpeta
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   firestore.get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.rol == 'exclusivo' &&
                   request.resource.size < 5 * 1024 * 1024 && // Máximo 5MB
                   request.resource.contentType.matches('image/.*');
    }

    // Reglas para la carpeta de marketplace
    match /marketplace/{userId}/{fileName} {
      // Permitir lectura pública de todas las imágenes de marketplace
      allow read: if true;

      // Cualquier usuario autenticado puede subir imágenes de marketplace
      // a su propia carpeta
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   request.resource.size < 5 * 1024 * 1024 && // Máximo 5MB
                   request.resource.contentType.matches('image/.*');
    }

    // Reglas para la carpeta de material
    match /material/{userId}/{fileName} {
      // Permitir lectura pública de todos los archivos de material
      allow read: if true;

      // Cualquier usuario autenticado puede subir archivos de material
      // a su propia carpeta
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   request.resource.size < 10 * 1024 * 1024 && // Máximo 10MB
                   (request.resource.contentType == 'application/pdf' ||
                    request.resource.contentType == 'application/vnd.openxmlformats-officedocument.wordprocessingml.document' ||
                    request.resource.contentType == 'application/msword');
    }

    // Reglas para la carpeta de fotos de perfil
    match /profile-pictures/{userId}/{fileName} {
      // Permitir lectura pública de todas las fotos de perfil
      allow read: if true;

      // Cualquier usuario autenticado puede subir su foto de perfil
      // solo a su propia carpeta
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   request.resource.size < 3 * 1024 * 1024 && // Máximo 3MB
                   request.resource.contentType.matches('image/.*');
    }

    // Denegar acceso a cualquier otra ubicación
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
