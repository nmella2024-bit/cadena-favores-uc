rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función para verificar si el usuario tiene rol exclusivo
    function esUsuarioExclusivo() {
      return request.auth != null &&
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'exclusivo';
    }

    // Función para verificar si el usuario tiene rol admin
    function esUsuarioAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'admin';
    }

    // Función para verificar si el usuario tiene rol exclusivo o admin
    function esUsuarioExclusivoOAdmin() {
      return esUsuarioExclusivo() || esUsuarioAdmin();
    }

    // Reglas para la colección de favores
    match /favores/{favorId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.usuarioId == request.auth.uid;

      // Permitir actualizar si:
      // 1. Eres el creador del favor (puede actualizar todo)
      // 2. Cualquier usuario puede agregar ayudantes (siempre que el usuarioId no cambie)
      // 3. Los admins pueden actualizar cualquier favor
      allow update: if request.auth != null && (
        // Creador puede actualizar todo
        request.auth.uid == resource.data.usuarioId ||
        // Admins pueden actualizar cualquier favor
        esUsuarioAdmin()
      );

      // Permitir eliminar si eres el creador o un admin
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.usuarioId ||
        esUsuarioAdmin()
      );
    }

    // Reglas para la colección de usuarios
    match /usuarios/{userId} {
      // Permitir lectura pública para validar códigos de referido (sin autenticación)
      // Los datos de usuario son en su mayoría públicos (perfil, nombre, carrera)
      allow read: if true;

      // Solo el dueño del perfil puede actualizarlo
      // Además, prevenir cambio de campos críticos como rol
      // EXCEPCIÓN: Permitir actualizar totalReferidos cuando se registra un referido
      allow update: if request.auth != null && (
        // El dueño puede actualizar su perfil
        (request.auth.uid == userId &&
         // Prevenir cambio de rol (solo si se incluye en la actualización)
         (!('rol' in request.resource.data) || request.resource.data.rol == resource.data.rol) &&
         // Prevenir cambio de uid (solo si se incluye en la actualización)
         (!('uid' in request.resource.data) || request.resource.data.uid == resource.data.uid) &&
         // SEGURIDAD: Prevenir cambio de email a dominio no UC
         (!('email' in request.resource.data) ||
          request.resource.data.email.matches('.*@(uc\\.cl|estudiante\\.uc\\.cl)$')))
      );

      // La creación de usuarios se maneja automáticamente vía Cloud Function en onCreate de Auth
      // Pero permitimos crear perfil si el usuario autenticado coincide con el userId
      // SEGURIDAD: Solo permitir emails con dominio UC
      allow create: if request.auth != null &&
                       request.auth.uid == userId &&
                       // El rol inicial debe ser "normal"
                       request.resource.data.rol == 'normal' &&
                       // VALIDACIÓN DE DOMINIO: Solo @uc.cl o @estudiante.uc.cl
                       request.auth.token.email.matches('.*@(uc\\.cl|estudiante\\.uc\\.cl)$') &&
                       request.resource.data.email.matches('.*@(uc\\.cl|estudiante\\.uc\\.cl)$');

      // No se permite eliminar usuarios (debe hacerse desde Firebase Auth)
      allow delete: if false;
    }

    // Reglas para la colección de feedback
    match /feedback/{feedbackId} {
      allow read: if false;
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }

    // Reglas para la colección de anuncios
    match /anuncios/{anuncioId} {
      // Todos pueden leer anuncios
      allow read: if true;

      // Solo usuarios con rol "exclusivo" o "admin" pueden crear anuncios
      allow create: if esUsuarioExclusivoOAdmin() &&
                    request.resource.data.autor == request.auth.uid;

      // Solo el autor (si es exclusivo) o admins pueden actualizar anuncios
      allow update: if esUsuarioAdmin() ||
                    (esUsuarioExclusivo() && request.auth.uid == resource.data.autor);

      // Solo admins pueden eliminar anuncios
      allow delete: if esUsuarioAdmin();
    }

    // Reglas para la colección de calificaciones
    match /calificaciones/{calificacionId} {
      // Cualquier usuario autenticado puede leer calificaciones
      allow read: if request.auth != null;

      // Solo usuarios autenticados pueden crear calificaciones
      // y solo pueden calificar si son el calificador
      allow create: if request.auth != null &&
                    request.resource.data.calificadorId == request.auth.uid;

      // No se permite actualizar o eliminar calificaciones
      allow update: if false;
      allow delete: if false;
    }

    // Reglas para la colección de marketplace
    match /marketplace/{productoId} {
      // Todos pueden leer productos
      allow read: if true;

      // Cualquier usuario autenticado puede crear productos
      allow create: if request.auth != null &&
                    request.resource.data.autor == request.auth.uid;

      // Solo el autor puede actualizar su producto
      allow update: if request.auth != null &&
                    request.auth.uid == resource.data.autor;

      // El autor o los admins pueden eliminar productos
      allow delete: if request.auth != null && (
                    request.auth.uid == resource.data.autor ||
                    esUsuarioAdmin()
                    );
    }

    // Reglas para la colección de pedidos (UCloseMeal)
    match /pedidos/{pedidoId} {
      // Todos pueden leer pedidos
      allow read: if true;

      // Cualquier usuario autenticado puede crear pedidos
      allow create: if request.auth != null;

      // Cualquier usuario autenticado puede actualizar pedidos
      allow update: if request.auth != null;

      // Solo el solicitante o el repartidor pueden eliminar
      allow delete: if request.auth != null;
    }

    // Reglas para la colección de material
    match /material/{materialId} {
      // Todos pueden leer material
      allow read: if true;

      // Solo usuarios con rol "exclusivo" o "admin" pueden crear material
      allow create: if esUsuarioExclusivoOAdmin() &&
                    request.resource.data.autorId == request.auth.uid;

      // Solo el autor (si es exclusivo) o admins pueden actualizar material
      allow update: if esUsuarioAdmin() ||
                    (esUsuarioExclusivo() && request.auth.uid == resource.data.autorId);

      // Solo admins pueden eliminar material
      allow delete: if esUsuarioAdmin();
    }

    // Reglas para la colección de notificaciones
    match /notificaciones/{notificacionId} {
      // Solo el destinatario puede leer sus notificaciones
      allow read: if request.auth != null &&
                   request.auth.uid == resource.data.userId;

      // Solo el sistema puede crear notificaciones (Admin SDK)
      allow create: if false;

      // Solo el destinatario puede actualizar sus notificaciones (marcar como leída)
      allow update: if request.auth != null &&
                    request.auth.uid == resource.data.userId;

      // Solo el destinatario puede eliminar sus notificaciones
      allow delete: if request.auth != null &&
                    request.auth.uid == resource.data.userId;
    }

    // Reglas para la colección de reportes
    match /reportes/{reporteId} {
      // Solo usuarios con rol "exclusivo" o "admin" pueden leer reportes (moderadores/admins)
      allow read: if esUsuarioExclusivoOAdmin();

      // Cualquier usuario autenticado puede crear reportes
      allow create: if request.auth != null &&
                    request.resource.data.reporterId == request.auth.uid;

      // Solo usuarios con rol "exclusivo" o "admin" pueden actualizar reportes (para cambiar estado)
      allow update: if esUsuarioExclusivoOAdmin();

      // Solo admins pueden eliminar reportes
      allow delete: if esUsuarioAdmin();
    }

    // ============================================
    // Reglas para la colección de CARPETAS (folders)
    // Usuarios EXCLUSIVOS y ADMINS pueden gestionar carpetas
    // NOTA: Las carpetas son estructura compartida, por lo que cualquier
    // exclusivo/admin puede editarlas para mantener la organización
    // ============================================
    match /folders/{folderId} {
      // Todos pueden leer carpetas (para ver la estructura)
      allow read: if true;

      // Usuarios con rol "exclusivo" o "admin" pueden crear carpetas
      allow create: if esUsuarioExclusivoOAdmin();

      // Usuarios con rol "exclusivo" o "admin" pueden modificar carpetas
      // (estructura compartida colaborativa)
      allow update: if esUsuarioExclusivoOAdmin();

      // Usuarios con rol "exclusivo" o "admin" pueden eliminar carpetas
      allow delete: if esUsuarioExclusivoOAdmin();
    }

    // ============================================
    // Reglas para la colección de REFERIDOS
    // Sistema de códigos de amigo para concurso
    // ============================================
    match /referidos/{referidoId} {
      // Usuarios pueden leer sus propios referidos
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.referidoPor ||
        request.auth.uid == resource.data.referido ||
        esUsuarioExclusivoOAdmin()
      );

      // Solo el sistema puede crear referidos (usuarios autenticados)
      // Se valida que el referido sea el usuario actual
      allow create: if request.auth != null &&
                    request.auth.uid == request.resource.data.referido;

      // No se permite actualizar o eliminar referidos (inmutables)
      allow update: if false;
      allow delete: if esUsuarioAdmin();
    }
    // ============================================
    // Reglas para la colección de PROFESORES (Clases Particulares)
    // ============================================
    match /profesores/{profesorId} {
      // Todos pueden ver los perfiles de profesores
      allow read: if true;

      // Cualquier usuario autenticado puede registrarse como profesor
      // Se valida que el usuarioId coincida con el usuario autenticado
      allow create: if request.auth != null &&
                    request.resource.data.usuarioId == request.auth.uid;

      // Solo el profesor puede actualizar su propio perfil
      allow update: if request.auth != null &&
                    request.auth.uid == resource.data.usuarioId;

      // Solo el profesor o un admin pueden eliminar el perfil
      allow delete: if request.auth != null && (
                    request.auth.uid == resource.data.usuarioId ||
                    esUsuarioAdmin()
      );
    }
  }
}
