rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función para verificar si el usuario tiene rol exclusivo
    function esUsuarioExclusivo() {
      return request.auth != null &&
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'exclusivo';
    }

    // Reglas para la colección de favores
    match /favores/{favorId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.usuarioId == request.auth.uid;

      // Permitir actualizar si:
      // 1. Eres el creador del favor, O
      // 2. Estás agregándote como ayudante
      allow update: if request.auth != null && (
        // Creador puede actualizar todo
        request.auth.uid == resource.data.usuarioId ||
        // Cualquier usuario autenticado puede agregarse como ayudante SI:
        // - El ayudanteId en el nuevo documento es tu uid
        // - Actualmente no hay ayudante (resource.data.ayudanteId es null o no existe)
        // - El creador (usuarioId) no cambia
        (request.resource.data.ayudanteId == request.auth.uid &&
         (!('ayudanteId' in resource.data) || resource.data.ayudanteId == null) &&
         request.resource.data.usuarioId == resource.data.usuarioId)
      );

      allow delete: if request.auth != null && request.auth.uid == resource.data.usuarioId;
    }

    // Reglas para la colección de usuarios - ABIERTAS TEMPORALMENTE
    match /usuarios/{userId} {
      allow read: if true;
      allow write: if true;
    }

    // Reglas para la colección de feedback
    match /feedback/{feedbackId} {
      allow read: if false;
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }

    // Reglas para la colección de anuncios
    match /anuncios/{anuncioId} {
      // Todos pueden leer anuncios
      allow read: if true;

      // Solo usuarios con rol "exclusivo" pueden crear anuncios
      allow create: if esUsuarioExclusivo() &&
                    request.resource.data.autor == request.auth.uid;

      // Solo usuarios con rol "exclusivo" pueden actualizar anuncios
      allow update: if esUsuarioExclusivo();

      // Solo usuarios con rol "exclusivo" pueden eliminar anuncios
      allow delete: if esUsuarioExclusivo();
    }

    // Reglas para la colección de calificaciones
    match /calificaciones/{calificacionId} {
      // Cualquier usuario autenticado puede leer calificaciones
      allow read: if request.auth != null;

      // Solo usuarios autenticados pueden crear calificaciones
      // y solo pueden calificar si son el calificador
      allow create: if request.auth != null &&
                    request.resource.data.calificadorId == request.auth.uid;

      // No se permite actualizar o eliminar calificaciones
      allow update: if false;
      allow delete: if false;
    }
  }
}
