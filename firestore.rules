rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función para verificar si el usuario tiene rol exclusivo
    function esUsuarioExclusivo() {
      return request.auth != null &&
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'exclusivo';
    }

    // Reglas para la colección de favores
    match /favores/{favorId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.usuarioId == request.auth.uid;

      // Permitir actualizar si:
      // 1. Eres el creador del favor (puede actualizar todo, incluyendo aceptar ayudantes y completar)
      // 2. Estás ofreciendo ayuda (agregándote al array ayudantes)
      allow update: if request.auth != null && (
        // Creador puede actualizar todo: estado, ayudanteSeleccionado, etc.
        request.auth.uid == resource.data.usuarioId ||
        // Cualquier usuario autenticado puede agregarse al array de ayudantes SI:
        // - No es el creador del favor
        // - Solo está agregando su información al array ayudantes
        // - El usuarioId no cambia
        (request.auth.uid != resource.data.usuarioId &&
         request.resource.data.usuarioId == resource.data.usuarioId &&
         // Verificar que solo se está agregando al array ayudantes
         request.resource.data.keys().hasAll(resource.data.keys()) &&
         ('ayudantes' in request.resource.data))
      );

      allow delete: if request.auth != null && request.auth.uid == resource.data.usuarioId;
    }

    // Reglas para la colección de usuarios - ABIERTAS TEMPORALMENTE
    match /usuarios/{userId} {
      allow read: if true;
      allow write: if true;
    }

    // Reglas para la colección de feedback
    match /feedback/{feedbackId} {
      allow read: if false;
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }

    // Reglas para la colección de anuncios
    match /anuncios/{anuncioId} {
      // Todos pueden leer anuncios
      allow read: if true;

      // Solo usuarios con rol "exclusivo" pueden crear anuncios
      allow create: if esUsuarioExclusivo() &&
                    request.resource.data.autor == request.auth.uid;

      // Solo usuarios con rol "exclusivo" pueden actualizar anuncios
      allow update: if esUsuarioExclusivo();

      // Solo usuarios con rol "exclusivo" pueden eliminar anuncios
      allow delete: if esUsuarioExclusivo();
    }

    // Reglas para la colección de calificaciones
    match /calificaciones/{calificacionId} {
      // Cualquier usuario autenticado puede leer calificaciones
      allow read: if request.auth != null;

      // Solo usuarios autenticados pueden crear calificaciones
      // y solo pueden calificar si son el calificador
      allow create: if request.auth != null &&
                    request.resource.data.calificadorId == request.auth.uid;

      // No se permite actualizar o eliminar calificaciones
      allow update: if false;
      allow delete: if false;
    }

    // Reglas para la colección de marketplace
    match /marketplace/{productoId} {
      // Todos pueden leer productos
      allow read: if true;

      // Cualquier usuario autenticado puede crear productos
      allow create: if request.auth != null &&
                    request.resource.data.autor == request.auth.uid;

      // Solo el autor puede actualizar su producto
      allow update: if request.auth != null &&
                    request.auth.uid == resource.data.autor;

      // Solo el autor puede eliminar su producto
      allow delete: if request.auth != null &&
                    request.auth.uid == resource.data.autor;
    }

    // Reglas para la colección de pedidos (UCloseMeal)
    match /pedidos/{pedidoId} {
      // Todos pueden leer pedidos
      allow read: if true;

      // Cualquier usuario autenticado puede crear pedidos
      allow create: if request.auth != null;

      // Cualquier usuario autenticado puede actualizar pedidos
      allow update: if request.auth != null;

      // Solo el solicitante o el repartidor pueden eliminar
      allow delete: if request.auth != null;
    }

    // Reglas para la colección de material
    match /material/{materialId} {
      // Todos pueden leer material
      allow read: if true;

      // Cualquier usuario autenticado puede crear material
      allow create: if request.auth != null &&
                    request.resource.data.autorId == request.auth.uid;

      // Solo el autor puede eliminar su material
      allow delete: if request.auth != null &&
                    request.auth.uid == resource.data.autorId;
    }
  }
}
